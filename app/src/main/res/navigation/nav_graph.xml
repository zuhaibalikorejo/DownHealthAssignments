<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.nytime.ui.home.SplashFragment"
        android:label="Home"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_search"
            app:destination="@id/searchFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.nytime.ui.search.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search">

        <action
            android:id="@+id/action_details"
            app:destination="@id/detailsFragment" />

    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.nytime.ui.detailFragment.DetailFragment"
        android:label="Details"
        tools:layout="@layout/fragment_details">

        <argument
        android:name="name"
        app:argType="string" />


        <argument
            android:name="language"
            app:argType="string" />

        <argument
            android:name="fork"
            app:argType="string" />

        <argument
            android:name="issues"
            app:argType="string" />

        <argument
            android:name="defualt"
            app:argType="string" />

        <argument
            android:name="avatarUrl"
            app:argType="string" />

        <argument
            android:name="subcribecount"
            app:argType="string" />


    </fragment>



</navigation>