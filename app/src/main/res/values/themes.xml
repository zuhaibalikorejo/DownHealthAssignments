<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nytimes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Card.Clickable.ListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/colorListItemBackground</item>
        <item name="cardCornerRadius">@dimen/corner_radius</item>
        <item name="cardElevation">@dimen/elevation_list_item</item>
        <item name="android:layout_marginBottom">@dimen/list_item_margin_bottom</item>
    </style>

    <style name="Card.Clickable">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>


    <!--CardView START-->
    <style name="Card">
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="Card.CircleImage.ListItem">
        <item name="android:layout_width">@dimen/list_image_size</item>
        <item name="android:layout_height">@dimen/list_image_size</item>
        <item name="cardCornerRadius">@dimen/list_image_corner_radius</item>
    </style>

    <style name="Card.CircleImage.DetailsAvatar">
        <item name="android:layout_width">@dimen/details_image_size</item>
        <item name="android:layout_height">@dimen/details_image_size</item>
        <item name="cardCornerRadius">@dimen/details_image_corner_radius</item>
    </style>


    <style name="Card.CircleImage">
        <item name="android:layout_width">@dimen/default_image_size</item>
        <item name="android:layout_height">@dimen/default_image_size</item>
        <item name="cardCornerRadius">@dimen/default_image_corner_radius</item>
        <item name="cardElevation">@dimen/elevation_circle_image</item>
        <item name="cardBackgroundColor">@color/colorImagePlaceholder</item>
    </style>

    <style name="TextView.Secondary.Body.Fade">
        <item name="android:layout_width">match_parent</item>
        <item name="android:ellipsize">none</item>
        <item name="android:fadingEdgeLength">40dp</item>
        <item name="android:requiresFadingEdge">horizontal</item>
    </style>

    <style name="TextView.Secondary.Body">
        <item name="android:textAppearance">@style/Text.Secondary.Body</item>
    </style>

    <style name="Text.Secondary.Body" />
    <!--Secondary TextView-->
    <style name="TextView.Secondary">
        <item name="android:textAppearance">@style/Text.Secondary</item>
    </style>

    <!--Base Text Appearance-->
    <style name="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorHint">@color/colorTextSecondary</item>
        <item name="android:textColorHighlight">@color/colorTextPrimary</item>
        <item name="android:textColorLink">@color/colorLink</item>
    </style>

    <!--Secondary Text Appearance-->
    <style name="Text.Secondary">
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>



    <!--TextView-->
    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text</item>
    </style>

    <style name="TextView.Primary.Subheader.Bold.Fade">
        <item name="android:layout_width">match_parent</item>
        <item name="android:ellipsize">none</item>
        <item name="android:fadingEdgeLength">40dp</item>
        <item name="android:requiresFadingEdge">horizontal</item>
    </style>

    <style name="TextView.Primary.Subheader.Bold">
        <item name="android:textAppearance">@style/Text.Primary.Subheader.Bold</item>
    </style>

    <style name="TextView.Primary.Subheader">
        <item name="android:textAppearance">@style/Text.Primary.Subheader</item>
    </style>

    <!--Primary TextView-->
    <style name="TextView.Primary">
        <item name="android:textAppearance">@style/Text.Primary</item>
    </style>

    <style name="Text.Primary.Subheader">
        <item name="android:textSize">16sp</item>
    </style>

    <!--Primary Text Appearance-->
    <style name="Text.Primary">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>


    <style name="Text.Primary.Subheader.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Primary.Body">
        <item name="android:textAppearance">@style/Text.Primary.Body</item>
    </style>

    <style name="Text.Primary.Body" />
    <style name="TextView.Secondary.Title.Bold">
        <item name="android:textAppearance">@style/Text.Secondary.Title.Bold</item>
    </style>

    <style name="TextView.Secondary.Title">
        <item name="android:textAppearance">@style/Text.Secondary.Title</item>
    </style>

    <style name="Text.Secondary.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Secondary.Title.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Primary.Header.Bold">
        <item name="android:textAppearance">@style/Text.Primary.Header.Bold</item>
    </style>
    <style name="Text.Primary.Header.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Primary.Header">
        <item name="android:textAppearance">@style/Text.Primary.Header</item>
    </style>

    <style name="Text.Primary.Header">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextView.Primary.Title">
        <item name="android:textAppearance">@style/Text.Primary.Title</item>
    </style>
    <style name="Text.Primary.Title">
        <item name="android:textSize">20sp</item>
    </style>


    <style name="Card.Clickable.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">@dimen/elevation_button</item>
        <item name="cardCornerRadius">@dimen/corner_radius</item>
        <item name="cardBackgroundColor">@android:color/white</item>
    </style>
</resources>